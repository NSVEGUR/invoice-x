{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "es2016",
    "noEmit": false,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "paths": {
      "@server/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "config"]
}
